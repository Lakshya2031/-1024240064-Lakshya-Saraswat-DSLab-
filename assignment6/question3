#include<iostream>
using namespace std;

struct DNode{
    int data;
    DNode *next, *prev;
};

struct CNode{
    int data;
    CNode *next;
};

DNode *dhead = NULL;
CNode *chead = NULL;

void dinsert(int x){
    DNode *n = new DNode{x,NULL,NULL};
    if(dhead == NULL){
        dhead = n;
    } else{
        DNode *t = dhead;
        while(t->next) t = t->next;
        t->next = n;
        n->prev = t;
    }
}

void cinsert(int x){
    CNode *n = new CNode{x,NULL};
    if(chead == NULL){
        chead = n;
        n->next = n;
    } else{
        CNode *t = chead;
        while(t->next != chead) t = t->next;
        t->next = n;
        n->next = chead;
    }
}

int dsize(){
    int count = 0;
    DNode *t = dhead;
    while(t){
        count++;
        t = t->next;
    }
    return count;
}

int csize(){
    if(chead == NULL) return 0;
    int count = 0;
    CNode *t = chead;
    do{
        count++;
        t = t->next;
    } while(t != chead);
    return count;
}

int main(){
    int n, x;
    cout<<"How many nodes in Doubly Linked List? ";
    cin>>n;
    for(int i=0;i<n;i++){
        cin>>x;
        dinsert(x);
    }

    cout<<"How many nodes in Circular Linked List? ";
    cin>>n;
    for(int i=0;i<n;i++){
        cin>>x;
        cinsert(x);
    }

    cout<<"Size of Doubly Linked List = "<<dsize()<<endl;
    cout<<"Size of Circular Linked List = "<<csize()<<endl;

    return 0;
}
